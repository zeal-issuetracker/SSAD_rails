<%= form_for(@issue) do |f| %>
  <% if @issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% @issue.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_area :title %>
  </div>

  <div class="field">
    <%= f.label :assignee %><br>0
    <%= f.number_field :assignee %>
  </div>

  <div class="field">
    <%= f.label :milestone %><br>
    <%= f.text_area :milestone %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.text_field :status %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :settings %><br/>
    <%=f.label :setting , "private" , :value =>1 %>
    <%=f.radio_button :setting , true %>
    <%=f.label :setting , "public" , :value => 0 %>
    <%= f.radio_button :setting ,false ,:checked=>true   %>
  </div>

  <div class="field">
    <%= f.label :project_id %><br>
    <%= f.text_field :project_id %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
