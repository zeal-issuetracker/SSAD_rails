<p id="notice"><%= notice %></p>

<h1>Listing Issues</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Createdby</th>
      <th>Assignee</th>
      <th>Votes</th>
      <th>Milestone</th>
      <th>Status</th>
      <th>Description</th>
      <th>Setting</th>
      <th>Project ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= issue.createdby %></td>
        <td><%= issue.assignee %></td>
        <td><%= issue.votes %></td>
        <td><%= issue.milestone %></td>
        <td><%= issue.status %></td>
        <td><%= issue.description %></td>
        <td><%= issue.setting %></td>
        <td><%= issue.project_id %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

