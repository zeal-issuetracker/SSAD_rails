
<p id="notice"><%= notice %></p>

<h1>Listing Issues</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Assignee</th>
      <th>Votes</th>
      <th>Milestone</th>
      <th>Status</th>
      <th>Settings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= issue.description %></td>
        <td><%= issue.assignee %></td>
        <td><%= issue.votes %></td>
        <td><%= issue.milestone %></td>
        <td><%= issue.status %></td>
        <% if issue.settings == false %>
          <td>Public</td>
        <% else %>
          <td>Private</td>
        <%end%>
        <td><%= link_to 'Show', issue %></td>
        <% if issue.user == current_user  %>

          <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
          <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
